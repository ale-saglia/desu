<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dclient.controllers.PasswordController">
   <children>
      <PasswordField fx:id="passwordField" onAction="#setPassword" promptText="Inserisci la password" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="7.0" />
         </HBox.margin>
      </PasswordField>
      <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#setPassword" text="Avanti" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>

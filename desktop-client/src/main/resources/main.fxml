<VBox alignment="CENTER" prefHeight="624.0" prefWidth="665.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
   <children>
      <HBox>
         <children>
            <TextField minHeight="-Infinity" minWidth="-Infinity" promptText="Cerca per Ragione Sociale" HBox.hgrow="ALWAYS" />
            <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Cerca">
               <HBox.margin>
                  <Insets left="7.0" />
               </HBox.margin>
            </Button>
            <Button disable="true" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Ricerca Avanzata">
               <HBox.margin>
                  <Insets left="7.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="rsppTable" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn editable="false" prefWidth="177.0" text="Ragione Sociale" />
          <TableColumn editable="false" minWidth="9.0" prefWidth="101.0" text="Tipologia" />
            <TableColumn editable="false" prefWidth="101.0" text="Scadenza" />
            <TableColumn editable="false" prefWidth="192.0" text="Riferimento Fattura" />
            <TableColumn editable="false" prefWidth="75.0" text="Pagato" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <VBox.margin>
            <Insets bottom="-7.0" />
         </VBox.margin>
      </TableView>
      <HBox minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <CheckBox minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" selected="true" text="Incarichi in scadenza" />
            <HBox HBox.hgrow="ALWAYS" />
          <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#switchToViewEdit" text="Visualizza/Modifica" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
